{
  "name": "@fulleststack/api",
  "type": "module",
  "version": "1.0.0",
  "private": true,
  "exports": {
    "./routes": "./src/routes/index.ts",
    "./schema": "./src/db/schema.ts"
  },
  "scripts": {
    "dev": "concurrently \"npm run db:dev\" \"npm run app:dev\"",
    "app:dev": "wrangler dev",
    "db:dev": "turso dev --db-file dev.db/db",
    "db:push": "drizzle-kit push",
    "db:generate": "drizzle-kit generate",
    "generate-auth-schema": "npx @better-auth/cli@latest generate --config ./src/lib/better-auth.config.ts --output ./src/db/auth.schema.ts -y",
    "deploy": "wrangler deploy --minify",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "lint:fix": "npm run lint --fix",
    "test": "cross-env ENVIRONMENT=test vitest"
  },
  "dependencies": {
    "@fulleststack/eslint-config": "workspace:^",
    "@hono/node-server": "^1.13.7",
    "@hono/zod-openapi": "^0.18.3",
    "@libsql/client": "^0.14.0",
    "@scalar/hono-api-reference": "^0.5.164",
    "better-auth": "^1.2.7",
    "drizzle-orm": "^0.38.2",
    "drizzle-zod": "^0.6.0",
    "hono": "^4.6.13",
    "hono-pino": "^0.8.0",
    "pino": "^9.6.0",
    "pino-pretty": "^13.0.0",
    "stoker": "^1.4.2",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.36",
    "@cloudflare/workers-types": "^4.20241205.0",
    "@types/node": "^22.10.2",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "dotenv": "^16.5.0",
    "drizzle-kit": "^0.30.1",
    "eslint": "^9.17.0",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-format": "^0.1.3",
    "tsc-alias": "^1.8.10",
    "tsx": "^4.19.2",
    "turso": "^0.1.0",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.95.0"
  }
}
